-# coding: utf-8

!!! 5
%html
  %head
    %title= [@title, "YetAnotherPecaFit(YAPecaFit)"].compact.join(" | ")
    =yield_content :include
  %body
    #header
      %h1= @title
      %p#username
        - unless access_control.allowed?(current_account, '/user')
          =link_to('Twitter', '/auth/twitter')
          でログインする
        - else
          ようこそ、
          =current_account.name ? current_account.name : "名無し" + "(" + current_account.uid.to_s + ")"
          さん (
          =link_to('ログアウト', '/logout')
          )
    #main= yield
    #footer
      Copyright 
      =link_to('YAPecaFit Staff', 'http://twitter.com/YAPecafit')


