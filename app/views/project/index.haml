-# coding: utf-8

.container
  - if @alert
    %ul.alert#project_list_alert
      %li.alert-info= @alert

.container
  %h2 プロジェクト一覧
  - if @project and @project.length > 0
    - for i in @project
      %h3
        %a{:href => ("/project/show/"+i[:creator_twitter_id].to_s+"/"+i[:project_name])}= i.project_name
      %ul
        %li= "作った人: " + i[:creator_twitter_name] + " ( " + i[:creator_twitter_id].to_s + ")"
        %li= "開始日: " + (i[:start_date] ? i[:start_date].to_s : "なし")
        %li= "終了日: " + (i[:end_date] ? i[:end_date].to_s : "なし")
        %li= "状態: " + (i[:project_type]['open'] ? "公開" : "非公開") + "," + (i[:project_type]['completed'] ? "完了" : "遂行中")
  - else
    %p プロジェクトはありません


