-# coding: utf-8

.container
  %h2 プロジェクト一覧
  - if @project and @project.length > 0
    - for i in @project
      %dl
        %dt= "プロジェクト名: " + i[:project_name]
        %dd= "作った人: " + i[:creator_twitter_name] + " ( " + i[:creator_twitter_id].to_s + ")"
        %dd= "開始日: " + (i[:start_date] ? i[:start_date].to_s : "なし")
        %dd= "終了日: " + (i[:end_date] ? i[:end_date].to_s : "なし")
  - else
    %p プロジェクトはありません


