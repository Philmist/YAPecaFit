-# vim: fileencoding=utf-8
.container
  - form_tag '/project/delete' do
    - field_set_tag do
      %h2 プロジェクト削除：確認
      %dl
        %dt プロジェクト名
        %dd= @project.project_name
        %dt 作成者名
        %dd= @project.creator_twitter_name
      = hidden_field_tag(:project_id, :value => @project.id.to_s)
      = hidden_field_tag(:delete_confirmed, :value => "true")
    = submit_tag "本当に削除する", :class => "btn btn-default"

