require 'twitter'

Yapecafit::App.controllers :main do
  
  # get :index, :map => '/foo/bar' do
  #   session[:foo] = 'bar'
  #   render 'index'
  # end

  # get :sample, :map => '/sample/url', :provides => [:any, :js] do
  #   case content_type
  #     when :js then ...
  #     else ...
  # end

  # get :foo, :with => :id do
  #   'Maps to url '/foo/#{params[:id]}''
  # end

  # get '/example' do
  #   'Hello world!'
  # end
  
  get :index, :map => '/' do
    cl = Twitter::Client.new(
      :consumer_key => settings.staff_consumer_key,
      :consumer_secret => settings.staff_consumer_secret,
      :oauth_token => settings.staff_access_token,
      :oauth_token_secret => settings.staff_access_secret
    )
    res = ""
    for i in cl.mentions_timeline(:count => 200)
      res = res + i.text + "from " + i.user.name
      res = res + "\n"
    end
    res
    #render 'main/index'
  end

end
