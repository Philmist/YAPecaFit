class Project
  include MongoMapper::Document

  # key <name>, <type>
  key :name, String, :required => true
  key :type, String, :required => true
  key :startdate, Date
  key :enddate, Date
  many :proj_results
  timestamps!
end

class ProjectResult
  include MongoMapper::EmbeddedDocument
  key :name, String
  key :twitter_id, Integer
  key :initial, Float
  key :final, Float
  key :result, Float
end

